    public QuanLySinhVien() {
        initComponents();
        setLocationRelativeTo(null);
        LoadData();
    }
    public void LoadData(){
        try {
            Connection con = DriverManager.getConnection(strDbUrl);
            list.clear();
            Statement st = con.createStatement();
            String sql = "SELECT * FROM SinhVien";
            ResultSet rs = st.executeQuery(sql);
            while (rs.next()) {                
                String Ma = rs.getString(1);
                String Ten = rs.getString(2);
                boolean gt = rs.getBoolean(3);
                int namSinh = rs.getInt(4);
                SinhVien sv = new SinhVien(Ma, Ten, gt, namSinh);
                list.add(sv);
            }
            con.close();
        } catch (Exception e) {
            System.out.println("Loi ket noi"+e);
        }
       LoadTable();
    }
    public void LoadTable(){
        DefaultTableModel model = (DefaultTableModel) tbSinhVien.getModel();
        model.setRowCount(0);
        for (SinhVien sv : list) {
            model.addRow(new Object[]{sv.getMaSV(), sv.getTenSV(), sv.isGioiTinh(), sv.getNamSinh()});
        }
    }
    public void Them(){
        if (Kiemtra(txtMaSV.getText())==true) {
            JOptionPane.showMessageDialog(this, "Ma Sinh Vien Bi Trung???");
        } else {
        try {
            if (txtMaSV.getText().isEmpty() || txtTen.getText().isEmpty() || buttonGroup1.getSelection() == null 
                    || txtNamSinh.getText().isEmpty()) {
               JOptionPane.showMessageDialog(this, "Thong tin ban nhap chua day du???");
            } else {
            Connection con = DriverManager.getConnection(strDbUrl);
            String luu = "INSERT INTO SinhVien VALUES (?,?,?,?)";
            PreparedStatement st = con.prepareStatement(luu);
            st.setString(1, txtMaSV.getText());
            st.setString(2, txtTen.getText());
            st.setInt(3, rbNam.isSelected()?1:0);
            st.setInt(4, Integer.parseInt(txtNamSinh.getText()));
            st.executeUpdate();
            JOptionPane.showMessageDialog(this, "Ban da luu thanh cong!!");
            LoadData();
            con.close();
            }
        } catch (Exception e) {
            System.out.println("Loi ket noi"+e);
        }
        }
    }
    
    public boolean Kiemtra(String ma){
        for (int i = 0; i < list.size(); i++) {
            if (list.get(i).getMaSV().equalsIgnoreCase(ma)) {
                return true;
            }
        }
        return false;
    }
    
    public void click(){
     int chon = tbSinhVien.getSelectedRow();
     SinhVien sv = list.get(chon);
     txtMaSV.setText(sv.getMaSV());
     txtTen.setText(sv.getTenSV());
     txtNamSinh.setText(String.valueOf(sv.getNamSinh()));
     boolean gt = sv.isGioiTinh();
        if (gt == true) {
            rbNam.setSelected(true);
        } else {
            rdNu.setSelected(true);
        }    
    }
    
    public void lamMoi(){
        txtMaSV.setText("");
        txtTen.setText("");
        txtNamSinh.setText("");
        buttonGroup1.clearSelection();
    }
